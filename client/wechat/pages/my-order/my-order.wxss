/* pages/my-order/my-order.wxss */
@import '../template/order-list-template.wxss';
.swiper-tab{
  position: absolute;
  z-index: 99;
  width: 100%;
  height: 7vh;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  line-height: 7vh;
  box-shadow: 0 6rpx 10rpx #bbb;  
}
.swiper-tab-item{
    display: inline-block;
    width: 50%;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    color: #8d8d8d;
}
.active{
    color: #1296db;
    background-color: #fff; 
    border-bottom: 4rpx solid #1296db;
}