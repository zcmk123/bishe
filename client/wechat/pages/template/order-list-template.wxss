/* pages/template/order-list-template.wxml.wxss */
.post-list {
  position: absolute;
  z-index: 0;
  top: 7vh;
  width: 100%;
  height: 93vh;
}
.post-item {
  padding: 20rpx 10rpx;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  /* border-radius: 6rpx; */
  /* box-shadow: 0 0 20rpx #bbb; */
}
.item-hover {
  background-color: #ccc;
}
.post-item .item-title {
  color: #000;
  font-size: 20px;
}
.post-item .item-start, .post-item .item-dest {
  position: relative;
  padding-left: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.post-item .icon-dot {
  position: absolute;
  margin-top: -10rpx;
  top: 50%;
  left: 0;
  width: 20rpx;
  height: 20rpx;
}