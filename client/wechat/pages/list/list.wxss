/* pages/list/list.wxss */
.container-a {
  justify-content: none;
}
.post-list {
  width: 100%;
  height: 100%;
}
.post-item {
  padding: 20rpx 10rpx;
  width: 100%;
  border-bottom: 10rpx solid #ccc;
  box-sizing: border-box;
}
.post-item .item-title {
  font-size: 20px;
}
.post-item .item-start, .post-item .item-dest {
  position: relative;
  padding-left: 25rpx;
}
.post-item .icon-dot {
  position: absolute;
  margin-top: -10rpx;
  top: 50%;
  left: 0;
  width: 20rpx;
  height: 20rpx;
}
