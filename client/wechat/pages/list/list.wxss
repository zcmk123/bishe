/* pages/list/list.wxss */
page {
  color: #8d8d8d;
}
.container-a {
  justify-content: none;
}
.post-list {
  width: 100%; 
  height: 100%;
  margin-top: 10rpx;
}
.post-item {
  padding: 20rpx 10rpx;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  /* border-radius: 6rpx; */
  box-shadow: 0 0 20rpx #bbb;
}
.item-hover {
  background-color: #ccc;
}
.post-item .item-title {
  color: #000;
  font-size: 20px;
}
.post-item .item-start, .post-item .item-dest {
  position: relative;
  padding-left: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.post-item .icon-dot {
  position: absolute;
  margin-top: -10rpx;
  top: 50%;
  left: 0;
  width: 20rpx;
  height: 20rpx;
}
.load-more {
  background-color: #f0f0f0;
}
#loading-icon {
  margin-right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
}
.weui-loadmore_line {
  border-top:1px solid #8d8d8d;
}